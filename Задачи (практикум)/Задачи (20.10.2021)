#include <iostream>
using namespace std;
int main()
{
    int month;
    cin >> month;
    switch (month) {
    case 12: 
    case 1: 
    case 2: 
        cout << "Winter"; break;
    case 3: 
    case 4: 
    case 5:
        cout << "Spring"; break;
    case 6:
    case 7: 
    case 8: 
        cout << "Summer"; break;
    case 9: 
    case 10: 
    case 11: 
        cout << "Autumn"; break;
    default: cout << "Invalid month!"; break;
    }
    return 0;
}

//Zadacha 3///////////////////////////////////////////////

#include <iostream>
using namespace std;
int main()
{
    double a, b;
    cin >> a >> b;
    int x = -b / a;
    if (a == 0 && b == 0) {
        cout << "INF";
    }
    else if (a != 0 && b != 0 && x == 0) {
        cout << "NO";
    }
    else cout << x;
}

//Zadacha 4////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main()
{
    int month, year;
    cin >> month >> year;
    switch (month) {
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12:
        cout << "31"; break;
    case 4:
    case 6:
    case 9:
    case 11:
        cout << "30";
    case 2: if ((year % 100 != 0 && year % 4 == 0) || year % 400 == 0) {
        cout << "29";
    }
          else cout << "28";
        break;
    default: cout << "Wrong month"; break;
    }
    return 0;
}

//Zadacha 5//////////////////////////////////////////////////

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int a, b, c;
    cin >> a >> b >> c;
    int D = b * b - 4 * a * c;
    if (D > 0) {
        double x1 = (-b + sqrt(D)) / 2 * a; 
        double x2 = (-b - sqrt(D)) / 2 * a;
        cout << "x1 = " << x1 << endl; 
        cout << "x2 = " << x2;
    }
    if (D == 0) {
        double x = -b / 2 * a;
        cout << "x1 = x2 = " << x;
    }
    if (D < 0) {
        cout << "No solution!";
    }
    return 0;
}

//Zadacha 6////////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main()
{
    char symbol;
    cin >> symbol;
    int decimal;
    decimal = int(symbol);
    if (decimal >= 97 && decimal <= 122) {
        cout << symbol << " is a lowercase letter";
    }
    else if (decimal >= 65 && decimal <= 90) {
        cout << symbol << " is an uppercase letter";
    }
    else cout << symbol << " is a special symbol";
    return 0;
}

//Zadacha 7//////////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main()
{
    int fourDigitNumber;
    cin >> fourDigitNumber;
    int firstDigit = fourDigitNumber / 1000;
    int secondDigit = fourDigitNumber / 100 % 10;
    int thirdDigit = fourDigitNumber / 10 % 10;
    int fourthDigit = fourDigitNumber % 10;
    bool check = (firstDigit % 2 == 1 && (firstDigit > secondDigit && firstDigit > thirdDigit && firstDigit > fourthDigit));
    cout << boolalpha << check;
    return 0;
}

//Zadacha 8////////////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main()
{
    int tomatoes, peppers, carrots, olives, potatoes, flavoring;
    cout << "Tomatoes - "; cin >> tomatoes;
    cout << "Peppers - "; cin >> peppers;
    cout << "Carrots - "; cin >> carrots;
    cout << "Olives - "; cin >> olives;
    cout << "Potatoes - "; cin >> potatoes;
    cout << "Flavoring (mg) - "; cin >> flavoring;
    bool check1 = (tomatoes >= 1 && peppers >= 2 && carrots >= 4 && olives >= 3 && potatoes >= 3 && flavoring >= 150);
    bool check2 = (tomatoes >= 2 && peppers >= 3 && carrots >= 5 && olives >= 6 && potatoes >= 10 && flavoring >= 200);
    bool check3 = (tomatoes >= 5 && peppers >= 6 && carrots >= 12 && olives >= 7 && potatoes >= 12 && flavoring >= 300);
    int checkAll = check1 + check2 + check3;
    switch (checkAll) {
        case 1: cout << "Trajcho can make a student salat"; break;
        case 2: cout << "Trajcho can make a student salat or Trajcho can make a student soup and need a friend for help"; break;
        case 3: cout << "Trajcho can make a student salat or Trajcho can make a student soup and need a friend for help or Trajcho can make a student casserole and need a friend for help"; break;
        default: cout << "Not enought ingredients"; break;
    }
    return 0;
}

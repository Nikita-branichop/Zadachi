#include <iostream>
using namespace std;
int main()
{
    int fourDigitNumber;
    cin >> fourDigitNumber;
    if (fourDigitNumber > 999 && fourDigitNumber < 10000) {
        int firstDigit = fourDigitNumber / 1000;
        int secondDigit = fourDigitNumber / 100 % 10;
        int thirdDigit = fourDigitNumber / 10 % 10;
        int fourthDigit = fourDigitNumber % 10;
        bool check = (firstDigit % 2 == 1 && (firstDigit > secondDigit && firstDigit > thirdDigit && firstDigit > fourthDigit));
        cout << boolalpha << check;
    }
    else cout << "Wrong digit";
    return 0;
}

//Zadacha 5/////////////////////////////////////////////////////////////////

#include<iostream>
using namespace std;
int main()
{
    int number, digit = 0, the_biggest_sum = 1, sum = 0;
    cin >> number;
    while (number != 0) {
        digit = number % 2;
        number /= 2;
        if (digit == 1) {
            sum += 1;
            if (sum > the_biggest_sum) {
                the_biggest_sum = sum;
            }
        }
        else sum = 0;
    }
    cout << the_biggest_sum;
    return 0;
}

//Zadacha 6/////////////////////////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main() 
{
    int weigh;
    cin >> weigh;
    for (int i = 0; i < weigh; i++) {
        for (int i1 = weigh - i; i1 > 0 ; i1--) {
            cout << " ";
        }
        cout << "/";
        for (int i2 = 0; i*2 > i2; i2++) {
            cout << " ";
        }
        cout << "\\" << endl;
    }
    cout << " ";
    for (int i3 = 0; i3 < weigh * 2; i3++) {
        cout << "-";
    }
    cout << endl;
    for (int i4 = 0; i4 < 4; i4++) {
        cout << " |";
        for (int i5 = 0; i5 < weigh * 2 - 2; i5++) {
            cout << " ";
        }
        cout << "|" << endl;
    }
    cout << " ";
    for (int i6 = 0; i6 < weigh * 2; i6++) {
        cout << "=";
    }
    return 0;
}

//Zadacha 7///////////////////////////////////////////////////////////////////////

#include <iostream>
using namespace std;
int main() 
{
    int n, digit = 0, digit1;
    cin >> n;
    digit1 = n;
    if (n > 0 && n < 101) {
        for (int i = 0; i < n; i++) {
            for (int i1 = 0; i1 < i; i1++) {
                cout << " ";
            }
            for (int i2 = n; i2 > i; i2--) {
                digit += 1;
                cout << digit;
            }
            digit = i + 1;
            cout << endl;
        }
        for (int i3 = 1; i3 < n; i3++) {
            for (int i4 = n - 1; i4 > i3; i4--)
                cout << " ";
            digit1 -= i3+1;
            for (int i5 = 0; i5 < i3+1; i5++) {
                digit1 += 1;
                cout << digit1;
            }
            cout << endl;
        }
    }
    else cout << "Wrong number";
    return 0;
}

